<div class="form_line"> 
    <label> </label>
    <div class="formElement">
		<label>
			<vte:if test="{checked}">
				<input type="checkbox" name="{name}" value="{value}" id="{id}" checked="checked" />
				<vte:else>
					<input type="checkbox" name="{name}" value="{value}" id="{id}" />
				</vte:else>
			</vte:if>
			<vte:value select="{label}" />
		</label>
		<vte:if test="{tooltip}">
			<img class="info_help" src="img/icon_pref_help.gif" title="{tooltip}" />
		</vte:if>
    </div>
</div>
